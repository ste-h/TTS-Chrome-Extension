{
    "manifest_version": 3,
    "name": "Article TTS",
    "version": "1.0",
    "description": "Reads the article out loud",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/Readability.min.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}